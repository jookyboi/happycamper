{
	"name": "Happy Camper",
	"version": "1.0.0",
	"description": "Read from, write to, and get notifications on activity in Campfire rooms.",
	"browser_action": {
		"default_icon": "images/icon48.png",
		"default_title": "Show Happy Camper",
        "popup": "happycamper.html"
	},
    "icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"permissions": [
    	"tabs",
		"http://*/*",
		"https://*/*"
	],
    "background_page": "background.html"
}